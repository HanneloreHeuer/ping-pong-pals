    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "name": "Make Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "makemigrations"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "name": "Run Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "name": "Create Super User",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "createsuperuser"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/dev.env"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/dev.env"
        }
    ]
}